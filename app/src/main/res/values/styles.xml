<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/marvelRed</item>
        <item name="colorPrimaryDark">@color/marvelRedDark</item>
        <item name="colorAccent">@color/cyanBlueAzure</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="menuIconTint">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleTextAppearance</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
